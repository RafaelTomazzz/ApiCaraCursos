generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Departamento{
  Diretoria
  RH
  Financeiro
  Contabilidade
  Juridico
  Comercial
  Marketing
  Logistica
  Compras
  TI
}

model Empresa {
  cnpj      Int       @id
  nome      String    @db.VarChar(55)
  email     String    @db.VarChar(55)
  telefone  Int  

  usuarios  Usuario[]
}

model Usuario{
  cpf             Int       @id
  cnpj_empresa    Int
  empresa         Empresa   @relation(fields: [cnpj_empresa], references: [cnpj], onDelete:Cascade)
  nome            String    @db.VarChar(255)
  senha           String    @db.VarChar(30)
  telefone        Int
  
  alunos    Aluno[]
  gestores  Gestor[] 
}

model Gestor{
  id              Int         @id @default(autoincrement())
  cpf_usuario     Int
  usuario         Usuario     @relation(fields: [cpf_usuario], references: [cpf], onDelete:Cascade)
  departamento    Departamento
}

model Aluno{
  id              Int         @id @default(autoincrement())
  cpf_usuario     Int
  usuario         Usuario     @relation(fields: [cpf_usuario], references: [cpf], onDelete:Cascade)
  cargo           String      @db.VarChar(30)
  ultimo_acesso   DateTime    @default(now())

  alunos_cursos         Aluno_Curso[]
  alunos_aulas          Aluno_Aula[]
  alunos_avaliacaos     Aluno_Avaliacao[]
  relatoios       Relatorio[]
  certificados    Certificado[]
}

model Aula{
  id          Int        @id @default(autoincrement())
  titulo      String     @db.VarChar(30)
  video       String     @db.VarChar(255)
  imagem      String     @db.VarChar(255)
  duracao     Int
  material    String?     @db.VarChar(255)

  alunos_aulas    Aluno_Aula[]
}

model Curso{
  id                Int       @id @default(autoincrement())
  carga_horaria     Int
  descricao         String    @db.VarChar(255)
  
  avaliacoes        Avaliacao[]
  alunos_cursos     Aluno_Curso[]
  relatorios        Relatorio[]
  certificados      Certificado[]
}

model Avaliacao{
  id              Int         @id @default(autoincrement())
  id_curso        Int
  curso           Curso       @relation(fields: [id_curso], references: [id], onDelete:Cascade)
  titulo          String      @db.VarChar(255)
  duracao         String      @db.VarChar(255)
  data_limite     DateTime?
  tipo            String      @db.VarChar(255)
  nota_max        Int

  alunos_avaliacaos     Aluno_Avaliacao[]
}

model Aluno_Avaliacao{
  id_aluno        Int
  aluno           Aluno       @relation(fields: [id_aluno], references: [id], onDelete:Cascade)
  id_avaliacao    Int
  avaliacao       Avaliacao   @relation(fields: [id_avaliacao], references: [id], onDelete:Cascade)
  nota            Int
  tempo_duracao   Int

  @@id([id_aluno, id_avaliacao])
}

model Aluno_Curso{
  id_aluno          Int
  aluno             Aluno   @relation(fields: [id_aluno], references: [id], onDelete:Cascade)
  id_curso          Int
  curso             Curso   @relation(fields: [id_curso], references: [id], onDelete:Cascade)
  data_inicio       DateTime
  data_fim          DateTime?

  @@id([id_aluno, id_curso])
  
}

model Aluno_Aula{
  id_aluno      Int     
  aluno         Aluno       @relation(fields: [id_aluno], references: [id], onDelete: Cascade)
  id_aula       Int
  aula          Aula        @relation(fields: [id_aula], references: [id], onDelete: Cascade)

  @@id([id_aluno, id_aula])
}

model Relatorio{
  id              Int       @id @default(autoincrement())
  id_aluno        Int
  aluno           Aluno     @relation(fields: [id_aluno], references: [id], onDelete:Cascade)
  id_curso        Int
  curso           Curso     @relation(fields: [id_curso], references: [id], onDelete:Cascade)
  data_emissao    DateTime
  progresso       Int
}

model Certificado{
  id            Int       @id @default(autoincrement())
  id_aluno      Int
  aluno         Aluno     @relation(fields: [id_aluno], references: [id], onDelete:Cascade)
  id_curso      Int
  curso         Curso     @relation(fields: [id_curso], references: [id], onDelete:Cascade)
  titulo        String    @db.VarChar(255)
}